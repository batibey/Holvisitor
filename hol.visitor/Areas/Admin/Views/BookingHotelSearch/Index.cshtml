@model IEnumerable<hol.visitor.Areas.Admin.Models.BookingHotelSearchViewModel.Result>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}

<h1>Reservation Page</h1>

<h3>Searching Destination: Paris/Fransa</h3>


<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Hotel Name</th>
        <th>Hotel Score</th>
        <th>Hotel Rating</th>
        <th>Details</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td>@item.hotel_name</td>
    @{ score = double.Parse(item.review_score.ToString()) / 10;}
    <td>@score</td>
    @{
        if (item.review_score_word == "Very good")
        {
            <td>Very Good</td>
        }
        if (item.review_score_word == "Good")
        {
            <td>Good</td>
        } 
        if (item.review_score_word == "Fabulous")
        {
            <td>Great !</td>
        }
    }
    <td><a href="#" class="btn btn-outline-dark">Detail</a></td>
</tr>
    }
</table>